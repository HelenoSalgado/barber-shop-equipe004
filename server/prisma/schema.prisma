generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id         Int         @id @default(autoincrement())
  nome       String
  loja       String
  preco      String
  descricao  String
  //usuario    User?       @relation(fields: [usuarioId], references: [id])
  agendamentos           Scheduling[]     
  //usuarioId  Int?        

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("servico")
}

model Scheduling {
  id         Int         @id @default(autoincrement())
  data       String
  hora       String
  usuario    User?       @relation(fields: [usuarioId], references: [id])
  usuarioId  Int?        @unique
  servico    Service[]   
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("agendamento")
}

model User {
  id          Int         @id @default(autoincrement())
  nome        String
  email       String      @unique
  telefone    String
  senha       String
  //servico     Service[]     
  //agendamento Scheduling? @relation(fields: [usuarioId], references: [id])
  //usuarioId  Int?         @unique
  agendamento Scheduling?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("usuario")
}
